{
  "name": "qyearsley.github.io",
  "version": "1.0.0",
  "description": "Github Pages Site",
  "type": "module",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:html && npm run lint:css",
    "lint:js": "eslint javascript/ games/",
    "lint:html": "htmlhint \"**/*.html\" --ignore \"node_modules/**,games/enchanted-garden/node_modules/**,coverage/**\"",
    "lint:css": "stylelint \"**/*.css\" --ignore-pattern \"node_modules/**\" --ignore-pattern \"games/enchanted-garden/node_modules/**\" --ignore-pattern \"coverage/**\"",
    "format": "npx prettier --write .",
    "start": "http-server -p 8000",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qyearsley/qyearsley.github.io.git"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-html": "^8.1.0",
    "eslint-plugin-import": "^2.32.0",
    "htmlhint": "^1.7.1",
    "http-server": "^14.1.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.0",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ],
    "*.html": [
      "htmlhint"
    ],
    "*.css": [
      "stylelint"
    ]
  }
}
